pipeline {
    agent any

    environment {
        GIT_REPO_URL = 'https://github.com/your-repo.git'
        GIT_BRANCH = 'main'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: "${GIT_BRANCH}", url: "${GIT_REPO_URL}"
            }
        }
    }
}
